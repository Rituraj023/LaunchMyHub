    <div>
        <a asp-page="Edit" asp-route-id="@Model.HubMaster?.Id" class="btn btn-primary btn-form">Edit</a>
        <a asp-page="Index" class="btn btn-secondary btn-form">Back to List</a>
    </div>

</div>
