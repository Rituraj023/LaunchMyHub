                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HubMaster.BriefDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HubMaster.BriefDescription)
                </dd>
              
