                    @Html.DisplayNameFor(model => model.HubMaster.ReferralSource)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HubMaster.ReferralSource.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HubMaster.ReferralSourceOther)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HubMaster.ReferralSourceOther)
                </dd>
            </dl>
        </div>
